                    </form>
                </sheet>
            </field>
        </record>

        <record id="view_medico_form" model="ir.ui.view">
            <field name = "name">citas.medico.form</field>
            <field name = "model">citas.medico</field>
            <field name = "arch" type="xml">
                <sheet>
                    <form>
